<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- res.partner inherit tree view -->
    <record id="hmcoffe_res_partner_view_tree_inherit" model="ir.ui.view">
        <field name="name">Daftar Pelanggan</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <!-- Add your xpath here -->
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="user_id"/>
                <field name="is_member"/>
                <field name="level"/>
            </xpath>
        </field>
    </record>

    <!-- res.partner inherit form view -->
    <record id="hmcoffe_res_partner_view_form_inherit" model="ir.ui.view">
        <field name="name">Form Pelanggan</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Add your xpath here -->
            <xpath expr="//field[@name='vat']" position="after">
                <field name="user_id"/>
                <field name="is_member"/>
                <field name="level"/>
            </xpath>
        </field>
    </record>

    <!-- res.partner action window -->
    <record id="hmcoffee_res_partner_action" model="ir.actions.act_window">
        <field name="name">Pelanggan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="hmcoffee_pelanggan_menu_act" 
                name="Pelanggan" 
                parent="stakeholder_menu_categ" 
                action="hmcoffee_res_partner_action" 
                sequence="15"/>

</odoo>
